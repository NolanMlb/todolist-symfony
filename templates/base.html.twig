<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>{% block title %}OpenTodo{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
        {# Favicon du site #}
		<link rel="shortcut icon" href="/img/favicon.ico" type="images/x-icon" /> 
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <header>
            <nav class="navbar navbar-light bg-light">
                    <div class="container-fluid">
                        <a class="navbar-brand" href={{ path('app_index') }}>
                        <img src="/img/logo.png" alt="" height="24" class="d-inline-block align-text-top ms-1">
                        </a>
                        {% if app.user %}
                        <div class="d-flex">
                            <a href={{ path('app_logout') }}>Déconnexion</a>
                        </div>
                        {% else %}
                        <div class="d-flex">
                            <a href={{ path('app_register') }} class="me-3">Inscription</a>
                            <a href={{ path('app_login') }}>Connexion</a>
                        </div>
                        {% endif %}
                    </div>
            </nav>
        </header>
		{% block body %}{% endblock %}
    </body>
</html>
